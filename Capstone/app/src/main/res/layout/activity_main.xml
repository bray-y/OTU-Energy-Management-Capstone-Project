<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- TITLE -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energy Dashboard"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- CURRENT USAGE -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCurrentUsage"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="2dp"
            app:strokeColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/txtTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_energy"
                    app:tint="#2E7D32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Usage"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/txtCurrentUsageValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.8 kWh"
                    android:textSize="22sp"
                    android:textColor="#2E7D32"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- DAILY SAVINGS -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDailySavings"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cardCurrentUsage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardPeakAlerts">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_savings"
                    app:tint="#388E3C" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Savings"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/txtSavingsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1.24"
                    android:textSize="20sp"
                    android:textColor="#388E3C"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- PEAK ALERTS -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPeakAlerts"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cardCurrentUsage"
            app:layout_constraintStart_toEndOf="@id/cardDailySavings"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_warning"
                    app:tint="#E65100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peak Alert Level"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/txtPeakStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:textColor="#E65100"
                    android:textSize="20sp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- DEVICE button -->
        <Button
            android:id="@+id/btnDeviceControl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Manage Devices"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2E7D32"
            android:textColor="white"
            app:layout_constraintTop_toBottomOf="@id/cardPeakAlerts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- USAGE HISTORY button -->
        <Button
            android:id="@+id/btnUsageHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="View Usage History"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4CAF50"
            android:textColor="white"
            app:layout_constraintTop_toBottomOf="@id/btnDeviceControl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>